root = true

# general
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# python
[*.py]
indent_style = space
indent_size = 4

# C++
[*.{cpp,h,tcc}]
indent_style = space
indent_size = 2

# Web
[*.{js,html,css}]
indent_style = space
indent_size = 2

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
quote_type = double

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
